<nav>
    <h4>Create cron process job</h4>
</nav>
<br/>
<div id="view" class="card">
    <div class="row">
        <div class="col s12 m3">
            <div>
                <input type="text" v-model="job.name" placeholder="Name">
            </div>
        </div>
        <div class="col s12 m3">
            <div>
                <input type="text" v-model="job.group" placeholder="Group">
            </div>
        </div>
        <div class="col s12 m3">
            <div>
                <input type="text" v-model="job.cron" placeholder="Cron">
            </div>
        </div>
        <div class="col s12 m3">
            <input type="number" value="1" min="1" v-model="job.sharding" placeholder="Sharding" alt="Sharding"/>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12">
            <div>
                <input type="text" v-model="job.shardingParameters" placeholder="ShardingParameters">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m3">
            <input type="text" v-model="job.load" placeholder="Load">
        </div>
        <div class="input-field col s12 m3">
            <select v-model="job.concurrentExecutionDisallowed">
                <option disabled>ConcurrentExecutionDisallowed</option>
                <option selected>True</option>
                <option>False</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m3">
            <div>
                <input type="text" v-model="job.retryCount" placeholder="RetryCount">
            </div>
        </div>
        <div class="col s12 m3">
            <div>
                <input type="text" v-model="job.owner" placeholder="Owner">
            </div>
        </div>
        <div class="col s12 m6">
            <input type="text" v-model="job.description" placeholder="Description">
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12">
            <input type="text" v-model="job.application" placeholder="Application">
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12">
            <input type="text" v-model="job.arguments" placeholder="Arguments">
        </div>
    </div>
    <div class="card-action">
        <button type="button" class="btn waves-effect" @@click="create()">SUBMIT</button>
        <a class="btn waves-effect" href="/job">BACK</a>
    </div>
</div>

@section scripts{
    <script src="~/js/cronProc.js" asp-append-version="true"></script>
}