<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        NODES
        <small>view all node</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fa fa-dashboard"></i> Swarm</a>
        </li>
        <li class="active">Node</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid" id="view">
    <div class="col-xs-12">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th width="10">#</th>
                        <th>Name</th>
                        <th>Instance</th>
                        <th>Provider</th>
                        <th>ConnectionString</th>
                        <th>Available</th>
                        <th>TriggerTimes</th>
                        <th>LastHeartbeat</th>
                    </tr>
                    <tr v-show="els.length==0">
                        <td colspan="13">
                            No data to display...
                        </td>
                    </tr>
                    <tr v-for="el in els">
                        <td>
                            <span :style="{'background-color': el.isConnected?'green':'red'}"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                        </td>
                        <td>
                            <span v-text="el.schedName"></span>
                        </td>
                        <td>
                            <span v-text="el.schedInstanceId"></span>
                        </td>
                        <td>
                            <span v-text="el.provider"></span>
                        </td>
                        <td>
                            <span v-text="el.connectionString"></span>
                        </td>
                        <td>
                            <span v-text="el.isConnected"></span>
                        </td>
                        <td>
                            <span v-text="el.triggerTimes"></span>
                        </td>
                        <td>
                            <span v-text="hub.formatDate(el.lastModificationTime)"></span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</section>

@section scripts{
    <script src="~/js/node.js" asp-append-version="true"></script>
}